{
  "name": "Framework-bello",
  "version": "1.0.0",
  "main": "lib/index.js",
  "repository": "https://github.com/Frasan00/Framework-bello.git",
  "author": "Frasan00 <francesco.sangiovanni.7@gmail.com>",
  "scripts": {
    "watch": "tsc --watch",
    "test": "yarn format && rm -rf ./lib && yarn build && touch ./lib/.env && cp ./.env ./lib/.env && yarn start",
    "format": "prettier --write '**/*.ts'",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "build": "yarn format && tsup",
    "dev": "ts-node src/index.ts",
    "start": "node lib/index.js"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-oas-generator": "^1.0.46",
    "winston": "^3.13.0",
    "typeorm": "0.3.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.15",
    "dotenv": "^16.4.5",
    "husky": "^9.0.11",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^10.4.0",
    "mongodb": "^6.7.0",
    "mongoose": "^8.4.1",
    "mssql": "^10.0.2",
    "mysql": "^2.18.1",
    "mysql2": "^3.10.0",
    "nodemailer": "^6.9.13",
    "pg": "^8.12.0",
    "pg-query-stream": "^4.6.0",
    "prettier": "^3.3.1",
    "redis": "^4.6.14",
    "reflect-metadata": "^0.2.2",
    "remap-istanbul": "^0.13.0",
    "rimraf": "^5.0.7",
    "sinon": "^18.0.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "sql.js": "^1.10.3",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "tsup": "^8.1.0",
    "typeorm-aurora-data-api-driver": "^3.0.1",
    "typescript": "^5.4.5"
  }
}
